pipeline {
    agent any

    environment {
        IMAGE_NAME = "rex/react-app"   // your docker image name
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def tag = "build-${env.BUILD_NUMBER}"
                    env.IMAGE_TAG = tag

                    echo "Building Docker image from root Dockerfile..."

                    sh """
                    docker build \
                      -t ${IMAGE_NAME}:${tag} \
                      -f Dockerfile \
                      .
                    """
                }
            }
        }

        stage('Smoke Test Container') {
            steps {
                script {
                    echo "Running container smoke test..."

                    sh """
                    # Remove any existing test container
                    docker rm -f react-test || true

                    # Start the container WITHOUT exposing any ports
                    docker run -d --rm \
                      --name react-test \
                      ${IMAGE_NAME}:${IMAGE_TAG}

                    echo "Waiting for container to start..."
                    sleep 5

                    # Health check INSIDE the container (no port conflicts)
                    docker exec react-test curl -f http://localhost || (docker logs react-test && exit 1)

                    # Stop container after test
                    docker stop react-test || true
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Successfully built and tested image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "❌ Pipeline failed. Check console logs for details."
        }
        always {
            sh "docker rm -f react-test || true"
        }
    }
}