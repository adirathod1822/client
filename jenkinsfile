pipeline {
    agent any

    environment {
        IMAGE_NAME = "aditya/react-app"   // change to your dockerhub repo if needed
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code...."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def tag = "build-${env.BUILD_NUMBER}"
                    env.IMAGE_TAG = tag

                    echo "Building Docker image from root Dockerfile..."

                    sh """
                    docker build \
                      -t ${IMAGE_NAME}:${tag} \
                      -f Dockerfile \
                      .
                    """
                }
            }
        }

              stage('Smoke Test Container') {
            steps {
                script {
                    echo "Starting container for smoke test..."

                    sh """
                    docker rm -f react-test || true

                    docker run -d --rm \
                      --name react-test \
                      ${IMAGE_NAME}:${IMAGE_TAG}

                    echo "Waiting for container to start..."
                    sleep 5

                    docker exec react-test curl -f http://localhost || (docker logs react-test && exit 1)

                    docker stop react-test || true
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Successfully built and tested image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "❌ Pipeline failed. Check logs!"
        }
    }
}